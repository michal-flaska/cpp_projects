{
        "tasks": [
                {
                        "type": "cppbuild",
                        "label": "C/C++: g++.exe build active file",
                        "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
                        "args": [
                                "-fdiagnostics-color=always",
                                "-g",
                                "${file}",
                                "-o",
                                "${fileDirname}\\${fileBasenameNoExtension}.exe"
                        ],
                        "options": {
                                "cwd": "${fileDirname}"
                        },
                        "problemMatcher": [
                                "$gcc"
                        ],
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        },
                        "detail": "Task generated by Debugger."
                },
                {
                "label": "Format All C++ Files",
                "type": "shell",
                "command": "Get-ChildItem -Recurse -Include *.cpp,*.h,*.hpp | ForEach-Object { clang-format -i $_.FullName }",
                "options": {
                        "shell": {
                        "executable": "powershell.exe"
                        }
                },
                "problemMatcher": []
                }
        ],
        "version": "2.0.0"
}
